<script src="/javascripts/monitor.js"></script>
<h2><%=@monitor[:monitor] %></h2>
<div id="message"></div>
<div>
<p>
    <button id="restart-button" type="button" class="btn btn-default">Restart</button>
    <button id="stop-button" type="button" class="btn btn-default">Stop</button>
    <button id="test-button" type="button" class="btn btn-default">Test</button>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>field</th>
            <th>value</th>
        </tr>
    </thead>
    <tbody>
        <% @monitor.each do |key, value| %>
            <tr>
                <td><%= key %></td>
                <td id="<%= key %>"><%= (value.is_a? Array) || (value.is_a? Hash) ? "<pre>#{JSON.pretty_generate(value)}</pre>" : value %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h4>Current State</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>field</th>
            <th>value</th>
        </tr>
    </thead>
    <tbody>
        <% @current_state.each do |key, value| %>
            <tr>
                <td><%= key %></td>
                <td><%= value %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h4>Latest Result</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>field</th>
            <th>value</th>
        </tr>
    </thead>
    <tbody>
        <% @test_result.each do |key, value| %>
            <tr>
                <td><%= key %></td>
                <td><%= (value.is_a? Array) || (value.is_a? Hash) ? "<pre>#{JSON.pretty_generate(value)}</pre>" : value %></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>