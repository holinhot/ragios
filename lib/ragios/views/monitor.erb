<script src="/javascripts/monitor.js"></script>
<h2><%=@monitor[:monitor] %></h2>
<div id="message"></div>

<p>
    <button id="restart-button" type="button" class="btn btn-default">Restart</button>
    <button id="stop-button" type="button" class="btn btn-default">Stop</button>
    <button id="test-button" type="button" class="btn btn-default">Test</button>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>field</th>
            <th>value</th>
        </tr>
    </thead>
    <tbody>
        <% @monitor.each do |key, value| %>
            <tr>
                <td><%= key %></td>
                <td id="<%= key %>"><%= (value.is_a? Array) || (value.is_a? Hash) ? "<pre>#{JSON.pretty_generate(value)}</pre>" : value %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h4>Current State</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>field</th>
            <th>value</th>
        </tr>
    </thead>
    <tbody>
        <% @current_state.each do |key, value| %>
            <tr>
                <td><%= key %></td>
                <td><%= value %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h4>Latest Result</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>field</th>
            <th>value</th>
        </tr>
    </thead>
    <tbody>
        <% @test_result.each do |key, value| %>
            <tr>
                <td><%= key %></td>
                <td><%= (value.is_a? Array) || (value.is_a? Hash) ? "<pre>#{JSON.pretty_generate(value)}</pre>" : value %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<% unless @notifications.blank? %>
    <h4>Recent Notifications</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>id</th>
                <th>Time</th>
                <th>Notifier</th>
                <th>event</th>
            </tr>
        </thead>
        <tbody>
            <% @notifications.each do |n| %>
                <tr>
                    <td><%= n[:_id][0...8] %></td>
                    <td><%= DateTime.parse(n[:created_at]).strftime("%H:%M %m/%d/%Y") %></td>
                    <td><%= n[:notifier] %></td>
                    <td><%= n[:event] %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end%>

<% unless @results.blank? %>
    <h4>Recent Test Results</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>id</th>
                <th>Time</th>
                <th>State</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
            <% @results.each do |r| %>
                <tr>
                    <td><%= r[:_id][0...8] %></td>
                    <td><%= DateTime.parse(r[:time_of_test]).strftime("%H:%M %m/%d/%Y") %></td>
                    <td><%= r[:state] %></td>
                    <td>
                      <% r[:test_result].each do |key, value | %>
                         <%= key %>, <%= value %>
                      <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end%>

<% unless @errors.blank? %>
    <h4>Recent Errors</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>id</th>
                <th>Time</th>
                <th>State</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
            <% @errors.each do |r| %>
                <tr>
                    <td><%= r[:_id][0...8] %></td>
                    <td><%= DateTime.parse(r[:time_of_test]).strftime("%H:%M %m/%d/%Y") %></td>
                    <td><%= r[:state] %></td>
                    <td>
                      <% r[:test_result].each do |key, value | %>
                         <%= key %>, <%= value %>
                      <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end%>
