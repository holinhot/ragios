<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>id</th>
            <th>Created at</th>
            <th>monitor</th>
            <th>every</th>
            <th>via</th>
            <th>plugin</th>
            <th>status</th>
        </tr>
    </thead>
    <tbody>
        <% @monitors.each do |monitor| %>
            <tr>
                <% id = monitor[:_id] %>
                <td><a href="/admin/monitors/<%= id%>"><%= "#{id[0...8]}..."%></a></td>
                <td><%= DateTime.parse(monitor[:created_at_]).strftime("%H:%M %m/%d/%Y") %></td>
                <td><%= monitor[:monitor] %></td>
                <td><%= monitor[:every] %></td>
                <td><%= monitor[:via].join(", ") %></td>
                <td><%= monitor[:plugin] %></td>
                <td><%= monitor[:status_] %></td>
            </tr>
        <% end %>
    </tbody>
</table>
