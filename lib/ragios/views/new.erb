<script src="/javascripts/jsoneditor.js"></script>
<script src="/javascripts/new.js"></script>
<ol class="breadcrumb">
  <li><a href="/admin/index">All Monitors</a></li>
  <li class="active">Add Monitor</li>
</ol>
<div id="message"></div>
<div class="panel panel-default">
    <div class="panel-body">
        <button type="button" id="update-button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-floppy-disk"></span> Save Monitor
        </button>
    </div>
</div>
<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#fields" role="tab" data-toggle="tab">Fields</a></li>
  <li id="source-tab"><a href="#source" role="tab" data-toggle="tab">View source</a></li>
</ul>
<div class="tab-content panel-spacing">

    <div id="monitor-editor"></div>

    <div class="tab-pane active" id="fields">
        <div class="table-options-section">
            <div class="table-select-rows-spacing pull-left">
                <button type="button" id="add-field-button" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-plus">
                    </span> Add field
                </button>
            </div>
        </div>

        <table class="table table-striped table-bordered table-responsive table-hover">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                    <th class="tiny-col"></th>
                </tr>
            </thead>
            <tbody id="new-monitor-table">
                <tr>
                    <td>monitor</td>
                    <td>
                        <textarea class="value" id="monitor" rows="1" style="width: 100%;"></textarea>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>every</td>
                    <td>
                        <textarea class="value" id="every" rows="1" style="width: 100%;"></textarea>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>via</td>
                    <td>
                        <textarea id="via" rows="1" style="width: 100%;"></textarea>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>plugin</td>
                    <td>
                        <textarea id="plugin" rows="1" style="width: 100%;"></textarea>
                    </td>
                    <td></td>
                </tr>
                <script type="text/template" id="unnamed-field-template">
                    <tr>
                        <td>
                            <textarea class="new-monitor-field" rows="1" style="width: 100%;"></textarea>
                        </td>
                        <td>
                            <textarea class="new-monitor-value" rows="1" style="width: 100%;"></textarea>
                        </td>
                        <td>
                            <span class="delete-field glyphicon glyphicon-remove" data-toggle="tooltip" data-placement="top" title="Delete field"></span>
                        </td>
                    </tr>
                </script>
            </tbody>
        </table>
    </div>
    <div class="tab-pane" id="source">
        <div class="panel panel-default">
            <div class="panel-body">
                <pre id="json"></pre>
            </div>
        </div>
    </div>
</div>
